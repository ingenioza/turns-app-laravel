								"exec": [
									"// Store token and identity if registration successful",
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    if (response.token) {",
									"        pm.collectionVariables.set('token', response.token);",
									"        pm.collectionVariables.set('user_id', response.user.id);",
									"        pm.collectionVariables.set('email', response.user.email);",
									"        pm.collectionVariables.set('password', 'password123');",
									"        if (response.user.username) { pm.collectionVariables.set('username', response.user.username); }",
									"        console.log('Token stored:', response.token);",
									"        console.log('User ID stored:', response.user.id);",
									"        console.log('Email stored:', response.user.email);",
									"    }",
									"}",
									"",
									"// Test response structure",
									"pm.test('Registration successful', function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([201, 422]);",
									"});",
									"",
									"if (pm.response.code === 201) {",
									"    pm.test('Response has token', function () {",
									"        const response = pm.response.json();",
									"        pm.expect(response).to.have.property('token');",
									"        pm.expect(response).to.have.property('user');",
									"    });",
